<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/profileLayout"
        layout="@layout/nav_header_user_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlHeaderProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_layout">

            <ImageView
                android:id="@+id/ImageViewProfile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_account_circle"
                android:tint="@color/colorYellow" />

            <TextView
                android:id="@+id/textViewProfile"
                style="@style/AppcompatTextView"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ImageViewProfile"
                android:text="@string/Label_Profile" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlHeaderLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_layout">

            <ImageView
                android:id="@+id/ImageViewLangauge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_language_black"
                android:tint="@color/colorYellow" />

            <TextView
                android:id="@+id/textViewLanguage"
                style="@style/AppcompatTextView"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ImageViewLangauge"
                android:text="@string/Label_LanguageOptions" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlHeaderHealthData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_layout">

            <ImageView
                android:id="@+id/ImageViewHealthdata"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_account_circle"
                android:tint="@color/colorYellow" />

            <TextView
                android:id="@+id/textViewHealthData"
                style="@style/AppcompatTextView"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ImageViewHealthdata"
                android:text="@string/Label_HeathData" />
        </RelativeLayout>

