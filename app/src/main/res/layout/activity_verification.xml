<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.VerificationActivity"
    android:orientation="vertical"
    android:layout_margin="20dp">
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/AppCompatEditTextVerficationCode"
        style="@style/TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_verification_code"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:textAllCaps="true"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSignUpPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/sign_up_background"
        android:drawableRight="@drawable/ic_play_circle_outline"
        android:drawableTint="@android:color/white"
        android:padding="15dp"
        android:layout_marginTop="40dp"
        android:text="@string/Label_Sign_up"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

</LinearLayout>