<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_text_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp"

    >

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:inputType="text"
        android:padding="10dp"
        android:text="@string/Label_SelectLevel"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/RadioGroupLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="onClick">

        <RadioButton
            android:id="@+id/RadioButtonBeginner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/Label_Beginner"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"

            />

        <RadioButton
            android:id="@+id/RadioButtonIntermediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/Label_Intermidiate"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"

            />

        <RadioButton
            android:id="@+id/RadioButtonAdvance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/Label_Advance"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </RadioGroup>
